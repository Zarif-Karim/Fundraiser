{
  "name": "fundraiser",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build",
    "start:built": "node dist/app.js",
    "start": "ts-node-dev src/app.ts",
    "test": "NODE_ENV=test PORT=7788 jest --runInBand --forceExit",
    "test:watch": "npm run test -- --watch",
    "format:staged": "pretty-quick --staged",
    "format:all": "prettier --write 'src/**/*.ts'",
    "format:verify": "prettier --check 'src/**/*.ts'",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.1",
    "koa2-cors": "^2.0.6",
    "lib0": "^0.2.88",
    "redis": "^4.6.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.14.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-router": "^7.4.8",
    "@types/koa2-cors": "^2.0.5",
    "@types/node": "^20.11.16",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "collectCoverage": true,
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
